<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 实心 -->
    <solid android:color="#4fc4ff" />
    <!-- 边框 -->
    <stroke
        android:width="0.5dp"
        android:color="#4fc4ff" />
    <!-- 圆角 -->
    <corners android:radius="5dp" />
    <!-- 边距 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
    <!--&lt;!&ndash; 渐变 &ndash;&gt;-->
    <gradient
        android:angle="270"
        android:endColor="#4fc4ff"
        android:startColor="#4fc4ff" />
</shape>